
<% if !current_user.nil? %>

  <% @user_cart.items.each do |u| %> <!-- Les items du panier -->
    <div class="cat_resume<%=u.id%>">
      <hr>
        <%= u.name %><br>
        <%= u.price %><br>
        <%= u.image %> <br>
        <%= link_to "Retirer du panier", @user_cart, value: "1",  controller: "carts", action: "destroy", method: :delete, remote: true%>
      <hr>
    </div>

  <% end %>


<% end %>
